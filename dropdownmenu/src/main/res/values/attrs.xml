<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <declare-styleable name="MyDropDownMenu">


        <attr name="childs" format="integer"/>
        <attr name="heading" format="string"/>
        <attr name="android:gravity"/>
        <attr name="headerTextSize" format="integer"/>
        <attr name="headertextColor" format="color"/>
        <attr name="android:textStyle" format="string"/>
        <attr name="singleSelection" format="boolean"/>
        <attr name="multiSelection" format="boolean"/>
        <attr name="header" format="reference"/>
        <attr name="outerborderWidth" format="integer"/>
        <attr name="outerborderColor" format="color"/>
        <attr name="outerborderRadius" format="integer"/>
